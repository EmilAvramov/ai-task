{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"moduleResolution": "node",
		"outDir": "./dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
